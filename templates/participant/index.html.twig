{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>List of participants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_participant</th>
                <th>Prenom_participant</th>
                <th>Sexe</th>
                <th>Image</th>
                <th>Email</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.nomParticipant }}</td>
                <td>{{ participant.prenomParticipant }}</td>
                <td>{{ participant.sexe }}</td>
                <td>{{ participant.image }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.ville }}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': participant.id}) }}" class="btn btn-success">show</a>
                    <a href="{{ path('participant_edit', {'id': participant.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participant_new') }}" class="btn btn-info">Create new</a>
{% endblock %}
